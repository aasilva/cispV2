<div class="event__detail__header">
  <h2>{{t "events"}}</h2>
  <a href="#{{t "route-events"}}" class="close">{{{view 'icons/ic_close02'}}}</a>
</div>

<div class="event__detail__wrapper">

  <section class="event__detail__column">
    <div class="event-item">
      {{{view 'events/events-item'}}}
    </div>

    <div class="content">{{{content}}}</div>
  </section>
  <section class="event__detail__column">

    {{#each attachments}}
      <div class="event__detail__image">
        <img src="{{this.url}}" alt="{{caption}}">
      </div>
    {{/each}}
  </section>
</div>
